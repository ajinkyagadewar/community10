<odoo>
    <template id="assets" name="project agile scrum assets" inherit_id="project_agile.assets">
        <xpath expr="." position="inside">

            <script type="text/javascript" src="/project_agile_scrum/static/src/js/views/backlog.js"/>
            <script type="text/javascript" src="/project_agile_scrum/static/src/js/views/active_sprint.js"/>

            <script type="text/javascript" src="/project_agile_scrum/static/src/js/widgets/menu.js"/>
            <script type="text/javascript" src="/project_agile_scrum/static/src/js/widgets/task_widget.js"/>

        </xpath>
    </template>

    <template id="assets_css" name="project agile scrum css assets" inherit_id="project_agile.assets_css">
        <xpath expr="." position="inside">
            <link href="/project_agile_scrum/static/src/css/project_agile_scrum.css" type="text/css" rel="stylesheet"/>
        </xpath>
    </template>

    <template id="web.assets" name="project agile scrum web assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/project_agile_scrum/static/src//lib/chartjs/chart.bundle.min.js"/>
            <script type="text/javascript" src="/project_agile_scrum/static/src/js/web/reports/burndown_chart.js"/>
            <script type="text/javascript" src="/project_agile_scrum/static/src/js/web/reports/iteration_burndown_chart.js"/>
        </xpath>
    </template>
</odoo>